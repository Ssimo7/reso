table_name = table_name || "#{I18n.t('activerecord.models.expert', count: experts.size)}"
experts = experts.ordered_by_institution
if experts.size > 1
  table_name = "#{table_name} (#{experts.size})"
end

panel table_name do
  table_for experts do
    column :institution
    column :antenne
    column(:full_name) { |expert| link_to(expert, admin_expert_path(expert)) }
    column :email
    column :phone_number
    column(:assistances) { |expert| expert.assistances.size }
  end
end
