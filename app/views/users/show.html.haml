#profile
  %table.ui.padded.basic.table
    %tbody
      - %i[first_name last_name institution role phone_number email].each do |attribute|
        %tr
          %td= User.human_attribute_name(attribute)
          %td= @user.send(attribute)

  = link_to t('edit'), edit_user_registration_path, class: 'ui green button'
