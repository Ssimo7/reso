- meta title: t('.your_contact_in_the_company')

%h2= t('.your_contact_in_the_company')
%p= t('.info_about_who_you_saw_during_your_visit', company_name: @visit.company.name)

- form_url = params[:question_id].present? ? update_visitee_visit_path(question_id: params[:question_id]) : update_visitee_visit_path

- if @visit.errors.any?
  .ui.negative.message
    %ul.list
      - @visit.errors.full_messages.each do |message|
        %li= message

= form_for @visit, url: form_url, html: { method: :patch, class: 'ui form' } do |f|
  = f.fields_for :visitee do |visitee_form|
    .field.required
      = visitee_form.label :full_name
      = visitee_form.text_field :full_name, required: true
    .field.required
      = visitee_form.label :role
      = visitee_form.text_field :role, required: true
    %h3= t('.coordinates')
    %p= t('.add_one_contact_mode_below')
    .field.required
      = visitee_form.label :email
      = visitee_form.text_field :email, required: true
    .field
      = visitee_form.label :phone_number
      = visitee_form.text_field :phone_number
  .actions
    = f.submit t('save'), class: 'ui button green'