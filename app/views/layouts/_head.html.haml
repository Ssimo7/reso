%head
  = metamagic site: t('app_name'), title: [:title, :site]
  %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
  = csrf_meta_tags
  = stylesheet_link_tag 'application', media: 'all', data: {turbolinks_track: 'reload'}
  = stylesheet_link_tag 'ie9_fixes', media: 'all', data: {turbolinks_track: 'reload'} if browser.ie?('<10')
  = javascript_include_tag 'application', data: {turbolinks_track: true}

  = favicon_link_tag 'reso-favicon.ico'
  = render partial: 'layouts/google_analytics'
  = yield :head
