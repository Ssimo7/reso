!!!
%html
  %head
    = metamagic site: t('app_name'), title: [:title, :site]
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all', data: {turbolinks_track: 'reload'}
    = javascript_include_tag 'application', data: {turbolinks_track: true}
    = favicon_link_tag 'reso-favicon.ico'
    = yield :head
  %body
    = render partial: 'layouts/navbar'
    = render partial: 'layouts/environment_ribbon'

    %main
      .ui.main.text.container
        = render partial: 'layouts/flashes'
        = yield

    = render partial: 'layouts/footer'

    = yield :body_bottom
