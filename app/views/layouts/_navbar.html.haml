%header.ui.top.fixed.menu
  .ui.container
    .header.item
      = link_to root_path do
        = t('app_name')
    - if user_signed_in?
      .item
        = link_to companies_path do
          = semantic_icon('building outline')
          = t('.search')
    - else
      .item
        = link_to home_about_path do
          = semantic_icon('question mark')
          = t('.know_more')
    .right.menu
      - unless user_signed_in?
        .item
          = link_to new_user_session_path do
            = semantic_icon('sign in')
            = t('.sign_in')
        .item
          = link_to new_user_registration_path do
            = semantic_icon('sign in')
            = t('.sign_up')
      - if user_signed_in?
        .item
          = link_to destroy_user_session_path, method: :delete do
            = semantic_icon('sign out')
            = t('.sign_out')
