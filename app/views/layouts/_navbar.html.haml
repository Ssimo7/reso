%header.ui.top.fixed.menu
  .ui.container
    .header.item{style: 'padding-top: 0;padding-bottom: 0;'}
      = link_to root_path do
        = image_tag 'reso-logo-simple.png', style: 'width: 60px'
    - if user_signed_in?
      .item
        = link_to companies_path do
          = semantic_icon('building outline')
          = t('.search') # TODO : Rename 'Pr√©paration de visites'
      .item
        = link_to diagnosis_index_path do
          = semantic_icon('sitemap')
          = t('.diagnosis_tool')
    - else
      .item
        = link_to home_about_path do
          = semantic_icon('question mark')
          = t('.know_more')
    .right.menu
      - unless user_signed_in?
        .item
          = link_to new_user_session_path do
            = semantic_icon('sign in')
            = t('.sign_in')
        .item
          = link_to new_user_registration_path do
            = semantic_icon('sign in')
            = t('.sign_up')
      - if user_signed_in?
        - if current_user.is_admin?
          .item
            = link_to admin_dashboard_path do
              = semantic_icon('dashboard')
              = t('.dashboard')
        .item
          = link_to edit_user_registration_path do
            = semantic_icon('dashboard')
            = t('.edit_profile')
        .item
          = link_to destroy_user_session_path, method: :delete do
            = semantic_icon('sign out')
            = t('.sign_out')