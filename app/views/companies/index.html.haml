%h1= t('.companies')
%p= t('.enter_company_number')
= form_for :company, url: search_companies_path do |f|
  .field
    = f.text_field :siret, type: 'number', min: 10**13, max: 10**14-1, style: 'width: 150px', value: 41816609600069
  .actions
    = f.submit t('.search')

%h2= t('.last_searches')
- if @queries
  %ul
    - @queries.each do |query|
      %li= link_to query, company_path(query)