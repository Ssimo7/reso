.ui.segments
  %h3.ui.segment.block.header
    = expert.full_name
  .ui.segment
    %strong Rôle et institution :
    #{expert.role}, #{expert.antenne.name}
  - if expert.phone_number.present?
    .ui.segment
      %strong #{t('attributes.phone_number')} :
      = expert.phone_number
  .ui.segment
    %strong #{t('attributes.email')} :
    = expert.email
  - if !expert.is_oneself?
    .ui.segment
      %strong #{t('activerecord.attributes.expert.users', count: expert.users.size)} :
      = expert.users.map(&:full_name).join(', ')
  .ui.segment
    %strong #{t('activerecord.attributes.expert.assistances')} :
    = expert.assistances.map(&:title).join(', ')
