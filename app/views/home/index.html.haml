.landing
  .landing-panel.hero-panel
    .landing-panel-inner-content
      .hero-wrapper
        .hero-text
          %p.hero-tagline
            = t('.tagline_html')
          - if current_user
            = link_to t('.start_button'), diagnoses_path, class: 'hero-button'
          - else
            = link_to t('.sign_up_button'), new_user_registration_path, class: 'hero-button'

        .hero-illustration
          = image_tag 'reso-picture.png', class: 'ui medium circular image'

  .landing-panel.features-panel
    .landing-panel-inner-content
      %h2.landing-panel-title.features-panel-title= t('.tool_to_help_companies')
      %ul.features
        %li.feature
          %p.feature-text
            = t('.feature_meet_company_html')
        %li.feature
          %p.feature-text
            = t('.feature_analyse_needs_html')
        %li.feature
          %p.feature-text
            = t('.feature_find_relevant_contacts_html')
        %li.feature
          %p.feature-text
            = t('.feature_contact_with_one_clic_html')

  .landing-panel.dev-logos-panel
    .landing-panel-inner-content
      %h2.landing-panel-title= t('.made_by')
      %ul.dev-logos
        %li.dev-logo.beta-gouv-logo
          = link_to 'https://beta.gouv.fr' do
            = image_tag 'logo-beta-gouv-fr.svg', width: 200
        %li.dev-logo
          = link_to 'http://www.gouvernement.fr/investissements-d-avenir-cgi' do
            = image_tag 'investissements_avenir.png', width: 140

  .landing-panel.cta-panel
    .landing-panel-inner-content
      .cta-panel-wrapper
        .cta-panel-explanation-wrapper
          %h1.cta-panel-title= t('.questions_or_suggestions')
          %p.cta-panel-explanation
            = t('.we_help_you_and_we_want_feedbacks_html')
        .cta-panel-button-wrapper
          = link_to t('contact_us'), contact_home_index_path, class: 'cta-panel-button'
