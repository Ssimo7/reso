- meta title: t('.title')

%h1= t('.title')
- mailto_link = mail_to ENV['APPLICATION_EMAIL'], ENV['APPLICATION_EMAIL'], target: :_blank
%p= t('.you_can_contact_us_html', mailto_link: mailto_link)

.ui.relaxed.list
  - @contacts.each do |contact|
    .item
      .content
        .header= contact.full_name
        .description
          = contact.contact_page_role.html_safe
          %br
          = "Tel : #{contact.phone_number}"